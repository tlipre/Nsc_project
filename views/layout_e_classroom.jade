html
  head
    != renderStyles()
    != renderStyles('e_classroom')
    meta(charset='UTF-8')
    block title
  body.classroom
    header
      nav.container
        ul.logo
          li.img-logo
            a < ! > LOGO
        ul.menu
          li
            a Course
          li
            a(href="/e-classroom/") E-Classroom
          li.line
            a Support
          if !username
            a(href="/login")
              li.please Please Login
          else
            li.please(id="username") #{username}

    block content
