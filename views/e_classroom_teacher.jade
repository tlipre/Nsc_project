extends layout
block title
	title e_classroom_teacher
block content
	.e_classroom

		.content-classroom
			.window.classroom-teacher
				.header-window
					.name-active
						img.circle(src='/images/mamieo.jpg')
						.username AjJoob
				.code
					textarea.editor(type='textarea' cols='130' rows='25')
					.terminal

				.footer-window
					input(type='button' class='form-control btn btn-success' value='Save & Submit')
					input(type='button' class='form-control btn btn-success' value='Reset code')
					.chat
						.textbox
							.type
								.input-group
									input(type="text" class="form-control" id="typing-box" placeholder="Message")
									.input-group-addon hide
						.content
							.header 
								p ห้องสนทนา SOA
							.chat-box
								.story
								each val, index in chat
									p
										span.name #{val.sender} :
										span #{val.message}
			.sidebar
				.topic
					p ระบบ E-Classroom	
				.intro
					p ชื่อห้อง SOA KMITL
