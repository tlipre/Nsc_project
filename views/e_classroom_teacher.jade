extends layout_e_classroom
block title
	title e_classroom_teacher
block content
	.e_classroom
		.content-classroom
			.window.classroom-teacher
				.header-window
					.name-active
						img.circle(src='/images/mamieo.jpg')
						.username(id="current_view") #{classroom.teacher.username}
				.code
					textarea.editor(type='textarea' cols='130' rows='25')
					.terminal

				.footer-window
					input(type='button' class='form-control btn btn-success' value='Save')
					.chat
						.textbox
							.type
								.input-group
									input(type="text" class="form-control" id="typing-box" placeholder="Message")
									.input-group-addon hide
						.content
							.header 
								p ห้องสนทนา
							.chat-box
								.story
								each val in chat
									p
										span.name #{val.sender}: 
										span #{val.message}
			.sidebar
				.topic
					p ระบบ E-Classroom	
				.intro
					p Name: #{classroom.raw_name}
						span  |
						a(href="") ยกเลิกคลาส
					p Key of this E-Classroom: #{classroom.key}

				.topic-sub
					p Your view
				.teacher
					.docker(data-id="#{classroom.teacher.container_id}" data-owner="#{classroom.teacher.username}")
						img(src="/images/sublime2.png")
						.name #{classroom.teacher.username}
						.clear

				.topic-sub
					p Student view
						span.num_student จำนวนนักเรียน #{classroom.student_count} คน
				.student
					each val in classroom.students
						.docker(data-id="#{val.container_id}" data-owner="#{val.username}")
							img(src="/images/sublime2.png")
							.name
								p #{val.username}
								//- p.type typing ... 
							.clear
				.footer-side
					a.see See all students
			.clear
	!= renderJs()
	!= renderJs('socket')
	!= renderJs('chat')
	!= renderJs('editor_teacher')
