@font-face {
    font-family: gotham
    src: url('static/bootstrap/fonts/supermarket.ttf')
}

.container
	width 960px
	padding 0px

.home 
	width 100%
	background-color white
	text-align center
	font-family supermarket
	color #4A4A4A

.home section.intro
	background-color #7C7C7C
	color white
	padding 50px 0 60px

.home section.intro p.topic
	font-size 28px
	padding-bottom 30px

.home section.intro .intro-video
	width 50%
	float left
	margin-left -3%
	padding-top 20px

.home section.intro video
	padding 0px
	border 3px solid white

.home section.intro .intro-video p
	font-size 20px
	color #BDBDBD
	
.home section.intro .intro-video span
	font-size 24px
	color white

.home section.intro .intro-video .btn.start
	width 250px
	height 62px
	font-size 20px
	color #4a4a4a
	background-color white
	padding-top 15px
	border-radius 25px
	border 6px solid #FFBF00

.home section.intro .intro-video article
	border 2px 
	solid white 
	width 408px
	height 240px
	margin 30px auto
	float none 

.home section.intro .intro-login
	width 50%
	float right
	font-size 16px

.home section.intro .intro-login .box
	width 80%
	margin auto
	float right
	text-align center

.home section.intro .nav-tabs > li > a
	background-color #f2f2f2
	margin-right 0px
	border 0px
	border-bottom 1px solid white

.home section.intro .nav-tabs > li > a.login
	border-top-left-radius 8px
	border-top-right-radius 0px

.home section.intro .nav-tabs > li > a.regis
	border-top-right-radius 8px
	border-top-left-radius 0px

.nav-tabs > li > a:hover
	background-color #e6e6e6!important
	
.home section.intro .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover
	background-color white!important
	color #4a4a4a!important

.home section.intro .nav-tabs > li
	width 50%

.home section.intro .nav-tabs a
	color #4A4A4A
	font-size 20px
	padding-top 15px
	
.home section.intro .tab-pane
	padding 25px 35px
	text-align left
	color #4a4a4a
	background-color white
	border-bottom-left-radius 8px
	border-bottom-right-radius 8px
	
.home section.intro .tab-pane form
	margin-bottom 0

.home section.intro .tab-pane p
	text-align center
	font-size 17px

.home section.intro .tab-pane input[type="text"]
	height 46px
	margin-bottom 15px
	font-size 18px

.home section.intro .tab-pane input[type="checkbox"]
	margin-right 10px

.home section.intro .tab-pane button
	color #4a4a4a
	background-color white
	padding 12px 0 5px 0
	font-size 18px
	display block
	margin 20px auto 18px auto
	width 180px
	border 1px solid #d8d8d8

.home section.intro .tab-pane p
	text-align center
	margin-bottom 10px 
	
.home section.intro .tab-pane img
	height 50px
	width 45%

.home section.intro .tab-pane img.face
	width 55%
	height 52px

.home section.intro .clear
	clear both 
	
.home section.goal
	width 100%
	background-color white
	padding 80px 0
	color #a4a4a4
	font-size 16px

// .home section.goal .row
// 	padding-left 0px
// 	margin-right 0px

.home section.goal .col-md-3 img
	width 80%

.home section.goal .col-md-3 p.topic
	font-size 24px
	margin-top 20px
	color #4A4A4A
	

.home section.e-classroom
	text-align left
	background-color #f2f2f2
	color white
	padding 80px 0
	
.home section.e-classroom p.topic
	font-size 32px
	text-align center
	color #4A4A4A
	margin-bottom 50px

.home section.e-classroom .box-map 
	margin-right -6%
	margin-left -6%
	margin-top 10px	
		
.home section.e-classroom .box-content
	width 33.3333%
	float left
	padding 0px 5.5%
	margin-bottom 70px

.home section.e-classroom .box-content .content
	width 100%
	padding 24px 0 20px 0
	background-color red
	text-align center
	font-size 22px
	border-radius 8px

.home section.e-classroom .row
	margin-top 40px

.home section.e-classroom .col-md-4 img
	width 100%

.home section.e-classroom .col-md-4 p
	font-size 18px
	color #4a4a4a

.home section.e-classroom .col-md-4 .col-md-2
	padding 0px
	
.home section.course
	background-color white
	width 100%
	padding 80px 0 60px 0

.home section.course .row-course
	margin-left -20px
	margin-right -20px
	
.home section.course .content
	width 100%
	background-color #f2f2f2
	font-size 17px
	padding 20px 30px 25px 30px
	border-radius 6px
	float left
	
.home section.course article
	width 33.3333%
	float left
	padding 0px 20px
	margin 20px 0

.home section.course article img
	width 50%
	margin 10px
	margin-top 5px

.home section.course article p.topic
	font-size 24px

.home section.course article button.btn
	padding 10px 35px 5px 35px
	font-size 21px	
	background-color white
	border-radius 20px
	border 3px solid green
	color green


.clear
	clear both
	


