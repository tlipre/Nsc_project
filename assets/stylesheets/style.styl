@font-face {
    font-family: gotham
    src: url('static/bootstrap/fonts/supermarket.ttf')
}

.home 
	width 100%
	background-color white
	text-align center
	font-family supermarket
	color #4A4A4A

.home section.intro
	background-color white
	height 600px

.home .intro p.topic
	font-size 28px
	padding 50px 0 30px 0

.home .intro .intro-video
	width 50%
	float left
	padding-left 5%

.home .intro .intro-video p
	font-size 20px
	color #848484
	
.home .intro .intro-video span
	font-size 24px
	color #4A4A4A

.home .intro .intro-video .start
	width 250px
	height 52px
	font-size 20px
	color white
	background-color #31B989
	padding-top 15px

.home .intro .intro-video article
	border 2px 
	solid white 
	width 408px
	height 240px
	margin 30px auto
	float none 

.home .intro .intro-login
	width 50%
	float right
	padding-right 5%
	font-size 16px
	
.home .intro .intro-login .box
	width 75%
	margin auto

.home .intro .nav-tabs > li > a
	background-color #f2f2f2

.nav-tabs > li > a:hover
	background-color #E6E6E6!important

.home .intro .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover
	background-color #4A4A4A!important
	color white

.home .intro .nav-tabs > li
	width 50%

.home .intro .nav-tabs a
	color #4A4A4A
	font-size 20px
	padding-top 15px
	
.home .intro .tab-pane
	padding 25px 35px
	text-align left
	color #4A4A4A
	background-color #f2f2f2
	
.home .intro .tab-pane form
	margin-bottom 0

.home .intro .tab-pane p
	text-align center
	font-size 18px

.home .intro .tab-pane input[type="text"]
	height 46px
	margin-bottom 15px
	font-size 16px

.home .intro .tab-pane input[type="checkbox"]
	margin-right 10px

.home .intro .tab-pane button
	color #4a4a4a
	background-color white
	padding 12px 0 5px 0
	font-size 18px
	display block
	margin 12px auto 14px auto
	width 180px
	border 1px solid #d8d8d8

.home .intro .tab-pane p
	text-align center
	margin-bottom 10px 
	
.home .intro .tab-pane img
	height 50px
	width 45%

.home .intro .tab-pane img.face
	width 55%
	height 52px

.home .intro .clear
	clear both 
	


