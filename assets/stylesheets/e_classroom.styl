	margin-top 5px
	margin-bottom 15px
	
.overall .modal .modal-body
	padding-bottom 15px
	padding-top 25px

.overall .modal .modal-body button
	padding-left 5%
	padding-right 5%
	background-color #4A4A4A
	color white

.overall .modal .modal-body input
	margin-left 15px
	margin-right 15px
	
