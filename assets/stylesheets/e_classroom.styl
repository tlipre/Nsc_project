.overall article img.circle.img-teacher
	height 40px
	width 40px
	margin-right 10px
	
.overall article p.topic
	font-size 18px
	margin-top 10px
	color white

.overall article .sub-topic span.amount
	padding-left 4px
	color #31B989
	font-size 17px

.overall article .sub-topic span.full
	color #FE2E64
	font-size 17px

