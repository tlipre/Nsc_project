@font-face 
  font-family gotham
  src url('/fonts/supermarket.ttf')


.container 
	width 960px
	position: relative;
	display block
	padding 0px
	margin auto

.content-classroom
	width 100%
	margin auto

img.circle
	border-radius 50%

.window
	width 78%
	float right
	background-color #272722
	padding 0
	height 100%

.full-window
	background-color #272722


.full-window .code .editor
	background-color transparent
	color white


.full-window .code .terminal
	width 400px
	height 235px
	background-color black
	border 1px solid #848484
	position fixed
	right 1%
	top 120px
	padding-left 8px
	line-height 1.42857143

.window.classroom-student
	width 100%

.window .header-window
	background-color #9B9B9B
	width 100%
	height 60px

.window.classroom-student .header-window
	background-color #f2f2f2

.window .header-window .name-active
	position relative
	margin-left 5%	

.window .header-window img.circle
	width 51px
	height 51px
	border 1px solid white
	position absolute
	top 4px
	z-index 2
	
.window .header-window .username
	display inline
	padding 8px 30px 10px 40px
	height 38px
	background-color white
	border-radius 5px
	position absolute
	top 10px
	left 20px

.window.classroom-student .header-window
	font-size 14px
	position relative
	background-color white

.window.classroom-student .header-window .class-name p a
	color #31B989
	text-decoration underline
	padding-left 5px

.window.classroom-student .header-window .class-name,
.window.classroom-student .name-teacher
	padding-top 20px
	margin-left 4%
	float left

.window.classroom-student .header-window .time
	float right
	margin-right 4%
	padding-top 20px
	color #848484
	
.window.classroom-student .header-window .username
	position relative
	background-color #f2f2f2

.window.classroom-student .name-teacher
	float left

.window.classroom-student img.circle
	top -3px
	
.window.classroom-student .name-active
	display block
	float left
	margin-left 95px
	position absolute
	top 8px
	
.window .code
	width 100%
	padding 10px
	height 100%

.window .code .terminal
	width 400px
	height 235px
	background-color black
	border 1px solid #848484
	position fixed
	right 1%
	top 120px
	padding-left 8px


.window .editor
	background-color transparent
	color white
	

.footer-window .window-teacher
	width 120px
	height 80px
	background-color black
	border 1px solid #848484
	position fixed
	left 46%
	bottom 60px
	color white

.footer-window .techer-window a
	color white
	position fixed
	left 47%
	margin-top -30px

.footer-window .techer-window a:hover
	cursor pointer

.sidebar
	width 22%
	height 100%
	float left
	background-color white
	overflow scroll
	
.sidebar .intro	
	padding 0 10px 10px 10px
	font-size 14px

.sidebar .topic
	font-weight 400
	width 100%
	height 40px
	padding 8px 0 6px 10px
	background-color #E2E2E2
	margin-bottom 20px

.sidebar .topic-sub p,	
.sidebar .topic p 
	margin-left 4%
	font-size 16px

.sidebar .topic-sub p
	margin-bottom 0;
	
.sidebar .intro p
	margin-left 8%

.sidebar .topic-sub
	padding 12px 12px 6px 10px
	border-top 2px solid #d8d8d8
	
.sidebar .num_student
	float right
	font-size 14px
	color #848484
	
.sidebar .intro  p a
	color #31B989
	text-decoration underline
	padding-left 5px
 
.sidebar .student
 	border none
 	height auto
 	background-color white
 	padding-bottom 100px
 
.sidebar .docker
 	width 100%
 	margin auto
 	padding 10px 5% 10px 5%
 	
.sidebar .docker:hover
	cursor pointer
	background-color #f2f2f2

.sidebar .docker img
	width 42% 
	float left

.sidebar .docker .name
	float left
	margin-left 5%
	padding-top 8%

.sidebar .docker p
	line-height 10px
 
.sidebar .docker p.type
	color #848484
	font-size 12px

.clear 
	clear both

.footer-side,	
.footer-window
	position fixed
	bottom 0
	width 100%
	height 50px
	background-color black

.footer-window input.btn
	width auto
	padding auto 1%
	margin 10px 0 0 2%
	background-color #31B989

.red
	background-color red !important


.black-font
	color #4a4a4a !important


.footer-window .chat .content,
.footer-window .chat .textbox
	width 400px
	height 50px
	background-color white
	position fixed
	right 1%
	bottom 0

.footer-window .chat .type .input-group-addon:hover
	cursor pointer

.footer-window .chat .type
	padding 10px

.footer-window .chat .chat-box,
.footer-window .chat .content
	background-color white
	bottom 60px
	// padding 15px 10px 10px 10px
	height 235px
	border-radius 5px

.footer-window .chat .content .header
	height 35px
	background-color #f2f2f2
	padding-top 8px	
	text-align center

.footer-window .chat .chat-box
	overflow scroll
	padding 18px 15px 0 15px
	height 200px

.footer-window .chat .content span.name 
	color #31B989

.footer-side
	padding-top 10px
	background-color #e2e2e2
	width 22%
	text-align center
	height 40px

.footer-side a.see
	color #4A4A4A
	margin auto
	font-size 14px
	text-decoration underline

.footer-side a.see:hover
	cursor pointer
	

